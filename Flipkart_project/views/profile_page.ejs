                     <form action="/logout/" method="get">					 
			      	   <h5 class="ms-3 m-1 mt-5"> 
					   <i class="fa-solid fa-arrow-up-left-from-circle fs-2 text-primary me-2"></i>
					   <button class="btn btn-white border-0 fs-5 text-secondary fw-bold">Logout</button ></h5>			  
		             </form>
					 <hr>
					 <h5 class="ms-3 m-1 mt-3 ">Only for Admins</h5>	
		              <form action="/database/" method="get">		
					     <h5 class="ms-3 m-1 mt-5"> 
  					     <i class="fa-solid fa-database fs-2 text-primary me-2"></i>
					   
					   <button class="btn btn-white border-0 fs-5 text-secondary fw-bold">DataBase</button > </h5>			  
		             </form>
		 </div>
		 </div>
		 <div class=" container border shadow pt-3" style="width:80%;float:left;height:800px">
		     <% data.forEach(element =>{ %>
			 <h3 class="m-2">Personal Information</h3>
			     <p class="m-4"> 
				     <span class="border  p-3 px-5 mx-5 w-25"> <%=element.first_name%> </span>
				     <span class="border  p-3 px-5 mx-5 w-25"> <%=element.last_name%> </span>
				 
				 </p>
		     <h3 class="m-2">Email Address</h3>
			      <p class="border m-3 p-3 w-25"><%=element.username%></p>
		     <h3 class="m-2">Contact Number</h3>
			     <p class="border m-3 p-3 w-25"><%=element.mobile%></p>
			 <h3 class="m-2">Address Details</h3>
			         <p class="border m-3 p-3 w-25"><%=element.address%> <br> <%=element.pin%></p>
			        
		    <% }) %>
		 </div>
		 
	 </body>
