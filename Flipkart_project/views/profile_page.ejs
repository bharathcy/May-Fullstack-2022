		 <div class="me-4 " style="width:18%;float:left;height:800px">
		     <div  class="border shadow m-2 "style="width:250px;height:100px">
			      <p>Hello</p>
				  <% data.forEach((element) => {%>
				         <i class="fa-solid fa-user fs-1 text-primary"></i>
		                <span class="mx-2"><%= element.first_name %></span>	
		          <%})%>
				  
		     </div>
			 <div  class="border shadow m-2" style="width:250px;height:650px">
